<?xml version="1.0"?>
<robot name="dobot">

<material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link" >
    <visual>
       <geometry>
	  <box size="0.16 0.16 0.056"/> //base is 0.16*0.16*0.056
       </geometry>
       <material name="blue"/>
    </visual>
  </link>

  <link name="link2" >
    <visual>
       <geometry>
	  <cylinder radius="0.07" length="0.08"/> //link2 is radius 0.07 and height 0.08
       </geometry>
       <origin xyz="0 0 0.04" rpy="0 0 0"/> //link2 z + 1/2 h_itself
       <material name="green"/>
    </visual>
  </link>

  <link name="link3" >
    <visual>
       <geometry>
	  <box size="0.07 0.04 0.14"/> //link3 is 0.07*0.04*0.14
       </geometry>
       <origin xyz="-0.035 0 0.07" rpy="0 0 0"/> //link3 z + 1/2 h_itself, x - 1/2 l_itself
       <material name="red"/>
    </visual>
  </link>

  <link name="link4" >
    <visual>
       <geometry>
	  <box size="0.07 0.04 0.14"/> //link4 is 0.07*0.04*0.14
       </geometry>
       <origin xyz="-0.035 0 0.07" rpy="0 0 0"/> //link3 z + 1/2 h_itself, x - 1/2 l_itself
       <material name="white"/>
    </visual>
  </link>

  <joint name="joint12" type="continuous">
    <parent link="base_link"/>
    <child link="link2"/>
    <origin xyz="0 0 0.028" rpy="0 0 0" /> //joint12 z + 1/2 h_parent; rpy z is the rotate angle
  </joint>

  <joint name="joint23" type="continuous">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 0.08" rpy="0 0 0" /> //joint23 z + h_parent;  rpy y is the rotate angle
  </joint>

  <joint name="joint34" type="continuous">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 0.14" rpy="0 0 0" /> //joint34 z + h_parent; rpy y is the rotate angle
  </joint>
 
</robot>
